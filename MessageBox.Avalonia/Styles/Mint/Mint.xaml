<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Button /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="Button">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#334B4B4C"/>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="BorderBrush" Value="#AAC7F994"/>
        <Setter Property="Background" Value="#AAe0e0e0"/>
    </Style>
    <Style Selector="Button[Tag=Colored]">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#FFC7F994"/>
    </Style>
    <Style Selector="Button:pointerover[Tag=Colored]  /template/ ContentPresenter">
        <Setter Property="Background" Value="#AAC7F994"/>
    </Style>
</Styles>