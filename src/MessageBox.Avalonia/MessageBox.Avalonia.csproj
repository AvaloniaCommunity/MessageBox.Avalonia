<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageVersion>0.9.6.1</PackageVersion>
        <Title>MessageBox.Avalonia</Title>
        <Authors>Lary&lt;f98f96.gmail.com&gt;</Authors>
        <Description>Messagebox for AvaloniaUI</Description>
        <PackageProjectUrl>https://github.com/CreateLab/MessageBox.Avalonia</PackageProjectUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RepositoryUrl>messagebox.avalonia</RepositoryUrl>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>Avalonia</PackageTags>
        <TargetFrameworks>netstandard2.0;netcoreapp3.1</TargetFrameworks>
    </PropertyGroup>
    <ItemGroup>
        <AvaloniaResource Include="**\*.xaml">
            <SubType>Designer</SubType>
        </AvaloniaResource>
        <AvaloniaResource Include="Assets\*" />
        <AvaloniaResource Update="Views\MsBoxInputWindow.xaml">
          <SubType>Designer</SubType>
        </AvaloniaResource>
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Avalonia" Version="0.9.999-cibuild0008974-beta" />
      <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.999-cibuild0008974-beta" />
    </ItemGroup>

</Project>
