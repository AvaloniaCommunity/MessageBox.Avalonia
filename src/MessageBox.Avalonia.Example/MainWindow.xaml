<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800"
        x:Class="MessageBox.Avalonia.Example.MainWindow"
        Title="MessageBox.Avalonia.Example"
        WindowStartupLocation="CenterScreen">

  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
      <Setter Property="Height" Value="100" />
    </Style>
  </Window.Styles>
  <StackPanel>
    <Button Name="Standard Show" Click="Standard_Show_OnClick" Content="Standard Show"/>
    <Button Name="Standard Dialog" Click="Standard_Dialog_OnClick" Content="Standard Dialog"/>
    <Button Name="Standard Popup" Click="Standard_Popup_OnClick" Content="Custom PopUp"/>
    <Button Name="Custom Show" Click="Custom_Dialog_OnClick" Content="Custom Show"/>
    <Button Name="Custom MarkDown" Click="Custom_MarkDown_OnClick" Content="Custom Markdown"/>
    <Button Name="Custom Dialog" Click="Custom_Dialog_OnClick" Content="Custom dialog with image"/>
    <Button Name="Custom PopUp" Click="Custom_PopUp_OnClick" Content="Custom popup"/>
  </StackPanel>
</Window>
